<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <script>
        $(document).ready(function() {
            $('#not_matching').show();
            $('#cocktail_input').hide();
            $('#matching').hide();

            // $('#myTab a').click(function (e) {
            //   e.preventDefault()
            //   $(this).tab('show')
            // })

            var input_app_title = $('#cocktail_input').text();
            search_data(input_app_title);

        });

        function search_data(input_app_title) {
            $.get('/load', (data) => {
                $(data).each(function(i) {
                    var app_title = this.app_title;
                    if(input_app_title == app_title){
                        $('#not_matching').hide();
                        $('#matching').show();

                        $("#blend").prepend("<div class='item'></div>");

                        $("#cocktail_title").text(this.app_title);
                        $("#cocktail_contents").text(this.contents);
                        $("#cocktail_date").text(this.date);

                        // $("#blend .item:first").append("<div class='app_title'><b>" + this.app_title + "</b> (" + this.date +
                        //     ")</div>");
                        // $("#blend .item:first").append("<div class='contents " + "'>" + this.contents + "</div>");
                        // $("#blend .item:first").append("<div class='app_function '>" + this.app_function1 + "</div>");
                        // $("#blend .item:first").append("<div class='app_function '>" + this.app_function2 + "</div>");
                        // $("#blend .item:first").append("<div class='app_function '>" + this.app_function3 + "</div>");
                        // $("#blend .item:first").append("<div class='app_color '>" + this.app_color + "</div>");
                        return;
                    }
                });
            });
        }
    </script>
    <style>
    body {
        background-color: red;
    }
    #cocktail_title {
        margin-top: 30px;
        font-size: 36px;
        text-align: center;
    }
    #cocktail_date {
        font-size: 10px;
        text-align: right;
    }

    </style>
</head>

<body>
    <p id="cocktail_input"><%= app_title %></p>
    <div id="not_matching">
        <h1>NOT MATCHING</h1>
    </div>
    <div id="matching">
        <div class="container">
            <div class="row">
                <div class="panel panel-success col-xs-offset-1 col-xs-10" id="cocktail_title">
                </div>
            </div>
            <div class="row">
                <div class="panel panel-primary col-xs-offset-1 col-xs-10" id="cocktail_contents">
                </div>
            </div>
            <div class="row">
                <div class="panel panel-info col-xs-offset-6 col-xs-5" id="cocktail_date">
                </div>
            </div>



            <div role="tabpanel">
                <div class="row">
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="col-xs-offset-1 col-xs-2 active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">1</a></li>
                        <li role="presentation" class="col-xs-2"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">2</a></li>
                        <li role="presentation" class="col-xs-2"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">3</a></li>
                        <li role="presentation" class="col-xs-2"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">4</a></li>
                        <li role="presentation" class="col-xs-2"><a href="#test" aria-controls="test" role="tab" data-toggle="tab">5</a></li>
                    </ul>
                </div>
                <div class="tab-content" id="cocktail_maincontents">
                    <div role="tabpanel" class="tab-pane active" id="home">home!</div>
                    <div role="tabpanel" class="tab-pane" id="profile">profile!</div>
                    <div role="tabpanel" class="tab-pane" id="messages">messages!</div>
                    <div role="tabpanel" class="tab-pane" id="settings">settings!</div>
                    <div role="tabpanel" class="tab-pane" id="test">test!</div>
                </div>
            </div>

            </div>
        </div>
    </div>
    <% include ../partials/body_script %>
</body>

</html>
